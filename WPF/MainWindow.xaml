<Window x:Class = "WPF.MainWindow" xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local = "clr-namespace:WPF"
        mc:Ignorable = "d" Title = "MainWindow" Height = "350" Width = "525" >
	<Grid>
		<ListBox Name = "list" >
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation = "Horizontal" >
						<Border Background = "{Binding}" Width = "200" Height = "20" />
						<TextBlock Text="{Binding}"></TextBlock>
					</StackPanel>

				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

	</Grid>
</Window>